<div class="container">
  <div class="row">
    <h1>Users</h1>
    <div>
      <table class="table" id="users-table">
        <thead>
            <th>Name</th>
            <th>Email Address</th>
            <th>Roles</th>
            <th>Last Sign in</th>
            <th></th>
            <th></th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%=user.name%></td>
              <td><%=user.email%></td>
              <td>
                <%user.roles.each do |role|%>
                    <span><%=role.name%></span>
                <%end%>
              </td>
              <td><%= user.last_sign_in_at %></td>
              <td>
                <%= link_to edit_user_path(user.id) do %>
                    <i class="glyphicon glyphicon-pencil" title="Edit" id="<%="edit-user-#{user.id}"%>"></i>
                <% end %>
              </td>
              <td>
                <% unless user.eql? current_user %>
                  <%= link_to admin_destroy_user_path(user), method: :delete, title: "Delete",
                              data: { confirm: "Are you sure you want to delete this user?" } do%>
                      <i class="glyphicon glyphicon-trash" id="<%="delete-user-#{user.id}"%>"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
