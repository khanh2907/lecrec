<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "LECREC" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Lecrec" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <% if params[:controller].eql?("lecture_recordings") and params[:action].eql?("show") %>
    <div class="content">
       <%= render 'layouts/messages' %>
       <%= yield %>
    </div>
    <% else %>
    <main role="main">
       <%= render 'layouts/messages' %>
       <%= yield %>
    </main>
    <% end %>
  </body>
</html>
