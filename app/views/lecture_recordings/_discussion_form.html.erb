
<%= form_for @lecture_recording,
               :url => discussion_post_path(:id => @lecture_recording.id, :user_id => current_user.id),
               :method => "POST",
               :html => { :id => "lecrec-discussion-form" } do |f| %>
      <div class="modal-body">
      <%= f.fields_for :discussions do |d| %>
          <%= d.label :title%>
          <%= d.text_field :title%>
          <%= d.label :content%>
          <%= d.text_field :content%>
      <% end %>
    </div>
    <div class="modal-footer">
        <%= f.submit "Submit", :class => 'btn btn-primary'%>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
<% end %>